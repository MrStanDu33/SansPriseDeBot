{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "18.2.0",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "types": ["i18n", "jest", "@types/jest"],
    "baseUrl": ".",
    "paths": {
      "$src/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "bin",
    "tests",
    "index.ts",
    "jest.config.ts",
    "environment.d.ts"
  ],
  "exclude": ["node_modules"]
}
